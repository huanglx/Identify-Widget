			private function clickRow(event:GridEvent):void
			{
				if(!event.itemRenderer || !event.itemRenderer.data)
					return;
				var vIW:IdentifyWidget = _bWidget as IdentifyWidget;
				highlightedGraphic = findGraphicByAttribute(event.itemRenderer.data.OBJECTID);
				if(!highlightedGraphic){
					if(event.itemRenderer is CenteredEmbededImage)
						vIW.standaloneRelate(event.itemRenderer.data.OBJECTID);
					return;
				}
				var idResult:IdResult = vIW.getIdResultByGraphic(highlightedGraphic, vIW.idResultArrayCollection);
				if(event.itemRenderer is CenteredEmbededImage){
					vIW.clickSearchRelateResult(idResult);
					return;
				}
				var pt:MapPoint = idResult.point;
				var map:Map = ViewerContainer.getInstance().mapManager.map;
				if (idResult.geometry){
					if (idResult.geometry.type == Geometry.MAPPOINT){
						if(isNaN(_zoomScale)){
							map.zoom(1 / 16, idResult.point);
							map.centerAt(idResult.point);
						}else{
							if (map.scale > _zoomScale)
								map.scale = _zoomScale;
							map.centerAt(idResult.point);
						}
					}else{
						if(isNaN(_zoomScale)){
							map.extent = idResult.geometry.extent.expand(_zoomPercent);
							if (!map.extent.contains(idResult.geometry))
								map.level--;
						}else{
							if (map.scale > _zoomScale)
								map.scale = _zoomScale;
							map.centerAt(idResult.point);
						}
					}
				}
				callLater(showInfoWindow, [idResult]);
			}
			
